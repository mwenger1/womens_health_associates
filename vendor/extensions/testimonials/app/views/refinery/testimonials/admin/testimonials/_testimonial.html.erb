<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(testimonial) -%>">
  <span class='title'>
    <%= testimonial.name %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.testimonials_testimonial_path(testimonial), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_testimonials_admin_testimonial_path(testimonial), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.testimonials_admin_testimonial_path(testimonial), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: testimonial.name)}}  ) %>
  </span>
</li>
