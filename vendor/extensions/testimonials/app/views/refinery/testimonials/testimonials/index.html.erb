<div class="container">
  <div class="row">

    <div class="row featurette">
      <% @testimonials.each do |testimonial| %>
          <div class="col-md-4 pull-left testimonial-container">
            <h3 class="featurette-heading"><%= testimonial.name %>, <span class="text-muted"><%= testimonial.location %></span></h3>
            <% quote = strip_tags(testimonial.quote) %>
            <p><%= quote.split[0..40].join(" ") %> <span class="truncated"><%= quote %></span></p>
          </div>
      <% end %>
    </div>
  </div>
</div>
