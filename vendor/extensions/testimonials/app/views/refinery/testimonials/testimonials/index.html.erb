<div class="container">
  <div class="row">

    <div class="row featurette">
      <% @testimonials.each do |testimonial| %>
          <div class="col-md-6 pull-left">
            <h2 class="featurette-heading"><%= testimonial.name %>, <span class="text-muted"><%= testimonial.location %></span></h2>
            <p class="lead"><%=raw testimonial.quote %></p>
          </div>
      <% end %>
    </div>
  </div>
</div>
