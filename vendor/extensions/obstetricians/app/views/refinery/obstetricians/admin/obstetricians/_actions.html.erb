      <%= render '/refinery/admin/search', :url => refinery.obstetricians_admin_obstetricians_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_obstetricians_admin_obstetrician_path, t('.create_new') %>
