<% content_for :body_content_title do %>
  <%= @obstetrician.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @obstetrician.name %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @obstetrician.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @obstetrician.description %>
    </p>
  </section>
  <section>
    <h1>Quote</h1>
    <p>
      <%=raw @obstetrician.quote %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @obstetrician.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="obstetricians">
      <% @obstetricians.each do |obstetrician| %>
        <li>
          <%= link_to obstetrician.name, refinery.obstetricians_obstetrician_path(obstetrician) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
