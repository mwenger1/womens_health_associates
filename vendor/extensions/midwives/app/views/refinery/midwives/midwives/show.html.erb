<% content_for :body_content_title do %>
  <%= @midwife.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @midwife.name %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @midwife.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @midwife.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @midwife.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="midwives">
      <% @midwives.each do |midwife| %>
        <li>
          <%= link_to midwife.name, refinery.midwives_midwife_path(midwife) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
