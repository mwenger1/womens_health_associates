<div class="container">
  <div class="row">
    <%= render '/refinery/content_page' %>
  </div>

  <% @midwives.each do |midwife| %>
    <hr class="featurette-divider">

    <div class="row featurette">
      <div class="col-md-9 pull-<%= cycle("left", "right") %>">
        <h2 class="featurette-heading"><%= midwife.name %>, <span class="text-muted"><%= midwife.title %></span></h2>
        <p class="lead"><%=raw midwife.description %></p>
      </div>
      <div class="col-md-3">
        <%= image_fu midwife.photo, nil, class: "featurette-image img-reponsive center-block" %>
      </div>
    </div>
  <% end %>
</div>
