<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(midwife) -%>">
  <span class='title'>
    <%= midwife.name %>

  </span>
  <span class='actions'>
    
      <%= action_icon(:preview, refinery.midwives_midwife_path(midwife), t('.view_live_html')) %>
    
    <%= action_icon(:edit,    refinery.edit_midwives_admin_midwife_path(midwife), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.midwives_admin_midwife_path(midwife), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: midwife.name)}}  ) %>
  </span>
</li>
